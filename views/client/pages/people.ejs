<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body>
<header class="app-bar paper4">
    <% include ../partials/header.ejs %>
</header>
<main class="margin-top">
    <div class="row first">
        <div class="col-md-8 col-xs-10 col-md-offset-2 col-xs-offset-1">
            <div class="well">
                <div class="row">
                    <div class="col-md-12">
                        <h1>MEMBERS</h1>
                    </div>
                    <div class="col-md-12">
                        <p>Members of Information System Laboratory</p>
                    </div>
                    <div class="col-md-12">
                        <table class="table">
                            <tbody>
                            <% members.forEach((m) => { %>
                            <tr>
                                <td>
                                    <img src="<%= m.imagePath %>" style="height: 125px; width: 100px" />
                                </td>
                                <td>
                                    <a href="mailto:<%= m.email %>">
                                        <%= m.name %>
                                    </a>
                                    <% if (m.profilePage) { %>
                                    <a href="<%= m.profilePage %>" target="_blank">
                                        <%= m.name %>
                                    </a>
                                    <% }%>
                                    <div>
                                        <% if (m.field) { %>
                                            [<%= m.field %>]
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-xs-10 col-md-offset-2 col-xs-offset-1">
            <div class="well">
                <div class="row">
                    <div class="col-md-12">
                        <h1>ALUMNI</h1>
                    </div>
                    <div class="col-md-12">
                        <table class="table">
                            <tbody>
                            <% alumni.forEach((a) => { %>
                            <tr>
                                <td>
                                    <%= a.name %>
                                </td>
                                <td>
                                    <%= a.title %> (<%= a.year %>)
                                </td>
                                <td>
                                    <%= a.occupation %>
                                </td>
                            </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<footer>
    <% include ../partials/footer.ejs %>
</footer>

</body>
</html>