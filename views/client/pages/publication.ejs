<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
    <link rel="stylesheet" href="/static/css/publication.css">
</head>
<body>
<header class="app-bar paper4">
    <% include ../partials/header.ejs %>
</header>
<main class="margin-top">
    <div class="row first">
        <div class="col-md-8 col-xs-10 col-md-offset-2 col-xs-offset-1">
            <div class="well">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Publication</h1>
                        <p>
                            Personal use of this material is mermitted. However, permission to reprint/republish
                            this material for advertising or promotion purposes or for creating new collective works for
                            resale or redistribution to servers or lists, or to reuse any copyrighted component of this
                            work in other works, must be obtained from the copyright holder.
                        </p>
                    </div>
                    <ul class="nav nav-pills">
                        <li class="active"><a data-toggle="pill" href="#home">Journal</a></li>
                        <li><a data-toggle="pill" href="#menu1">Conference</a></li>
                    </ul>
                    <div class="col-md-12">
                        <div class="tab-content">
                            <div id="home" class="tab-pane fade in active">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td>Authors</td>
                                            <td>Title</td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% journal.forEach((j) => { %>
                                        <tr>
                                            <td>
                                                <%= j.authors.slice(0, -1).join(', ') + ' and ' + j.authors.slice(-1) %>
                                            </td>
                                            <td>
                                                <% if (j.pdfPath) { %>
                                                <a href="<%= j.pdfPath %>" target="_blank">
                                                    <%= j.name %>
                                                </a>
                                                <% } else { %>
                                                <%= j.name %>
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= j.submittedTo %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <div id="menu1" class="tab-pane fade">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <td>Authors</td>
                                        <td>Title</td>
                                        <td></td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <% conference.forEach((c) => { %>
                                        <tr>
                                            <td>
                                                <%= c.authors.slice(0, -1).join(', ') + ' and ' + c.authors.slice(-1) %>
                                            </td>
                                            <td>
                                                <% if (c.pdfPath) { %>
                                                <a href="<%= c.pdfPath %>" target="_blank">
                                                    <%= c.name %>
                                                </a>
                                                <% } else { %>
                                                <%= c.name %>
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= c.submittedTo %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<footer>
    <% include ../partials/footer.ejs %>
</footer>

</body>
</html>