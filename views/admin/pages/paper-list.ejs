<!doctype html>
<html class="no-js h-100" lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body class="h-100">
<div class="container-fluid">
    <div class="row">
        <% include ../partials/left-side-bar.ejs %>
        <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
            <div class="main-navbar sticky-top bg-white">
                <% include ../partials/menu.ejs %>
            </div>
            <div class="main-content-container container-fluid px-4">
                <!-- Page Header -->
                <div class="page-header row no-gutters py-4">
                    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                        <span class="text-uppercase page-subtitle">Overview</span>
                        <h3 class="page-title">Paper</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card card-small mb-4">
                            <div class="card-header border-bottom">
                                <h6 class="m-0 d-inline-block">Journal</h6>
                                <button type="submit" form="create-new-paper-j"
                                        class="mb-2 btn custom-btn-sm btn-sm btn-success mr-1 edit-button float-right">
                                    <i class="material-icons">add</i>
                                </button>
                                <form method="get" action="/admin/paper/form/journal" id="create-new-paper-j">
                                </form>
                            </div>
                            <div class="card-body p-0 pb-3 text-center">
                                <table class="table mb-0">
                                    <thead class="bg-light">
                                    <tr>
                                        <th scope="col" class="border-0">Authors</th>
                                        <th scope="col" class="border-0">Title</th>
                                        <th scope="col" class="border-0"></th>
                                        <th scope="col" class="border-0">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% journal.forEach((c) => { %>
                                    <tr>
                                        <td>
                                            <%= c.authors.slice(0, -1).join(', ') + ' and ' + c.authors.slice(-1) %>
                                        </td>
                                        <td>
                                            <% if (c.pdfPath) { %>
                                            <a href="<%= c.pdfPath %>" target="_blank">
                                                <%= c.name %>
                                            </a>
                                            <% } else { %>
                                            <%= c.name %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= c.submittedTo %>
                                        </td>
                                        <td style="min-width: 120px;">
                                            <form action="/admin/paper/<%= c._id %>?_method=DELETE" method="post"
                                                  id="delete-paper-<%= c._id %>"
                                                  onsubmit="return confirm('Are you sure you want to delete?');">
                                            </form>
                                            <form action="/admin/paper/unpublish/<%= c._id %>?_method=PUT" method="post"
                                                  id="unpublish-course-<%= c._id %>"
                                                  onsubmit="return confirm('Are you sure you want to unpublish?');">
                                            </form>
                                            <form action="/admin/paper/publish/<%= c._id %>?_method=PUT" method="post"
                                                  id="publish-course-<%= c._id %>"
                                                  onsubmit="return confirm('Are you sure you want to publish?');">
                                            </form>
                                            <button type="button" class="mb-2 btn custom-btn-sm btn-sm btn-warning mr-1 edit-button">
                                                <a href="/admin/paper/<%= c._id %>">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </button>
                                            <button type="submit" form="delete-paper-<%= c._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-danger mr-1 delete-button">
                                                <i class="material-icons">delete</i>
                                            </button>
                                            <% if(c.published === 'true'){ %>
                                            <button type="submit" form="unpublish-course-<%= c._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-secondary mr-1">
                                                <i class="material-icons">lock</i>
                                            </button>
                                            <% } else{ %>
                                            <button type="submit" form="publish-course-<%= c._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-outline-secondary mr-1">
                                                <i class="material-icons">lock_open</i>
                                            </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card card-small mb-4">
                            <div class="card-header border-bottom">
                                <h6 class="m-0 d-inline-block">Conference</h6>
                                <button type="submit" form="create-new-paper-c"
                                        class="mb-2 btn custom-btn-sm btn-sm btn-success mr-1 edit-button float-right">
                                    <i class="material-icons">add</i>
                                </button>
                                <form method="get" action="/admin/paper/form/conference" id="create-new-paper-c">
                                </form>
                            </div>
                            <div class="card-body p-0 pb-3 text-center">
                                <table class="table mb-0">
                                    <thead class="bg-light">
                                    <tr>
                                        <th scope="col" class="border-0">Authors</th>
                                        <th scope="col" class="border-0">Title</th>
                                        <th scope="col" class="border-0"></th>
                                        <th scope="col" class="border-0">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% conference.forEach((j) => { %>
                                    <tr>
                                        <td>
                                            <%= j.authors.slice(0, -1).join(', ') + ' and ' + j.authors.slice(-1) %>
                                        </td>
                                        <td>
                                            <% if (j.pdfPath) { %>
                                            <a href="<%= j.pdfPath %>" target="_blank">
                                                <%= j.name %>
                                            </a>
                                            <% } else { %>
                                            <%= j.name %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= j.submittedTo %>
                                        </td>
                                        <td style="min-width: 120px;">
                                            <form action="/admin/paper/<%= j._id %>?_method=DELETE" method="post"
                                                  id="delete-paper-<%= j._id %>"
                                                  onsubmit="return confirm('Are you sure you want to delete?');">
                                            </form>
                                            <form action="/admin/paper/unpublish/<%= j._id %>?_method=PUT" method="post"
                                                  id="unpublish-course-<%= j._id %>"
                                                  onsubmit="return confirm('Are you sure you want to unpublish?');">
                                            </form>
                                            <form action="/admin/paper/publish/<%= j._id %>?_method=PUT" method="post"
                                                  id="publish-course-<%= j._id %>"
                                                  onsubmit="return confirm('Are you sure you want to publish?');">
                                            </form>
                                            <button type="button" class="mb-2 btn custom-btn-sm btn-sm btn-warning mr-1 edit-button">
                                                <a href="/admin/paper/<%= j._id %>">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </button>
                                            <button type="submit" form="delete-paper-<%= j._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-danger mr-1 delete-button">
                                                <i class="material-icons">delete</i>
                                            </button>
                                            <% if(j.published === 'true'){ %>
                                            <button type="submit" form="unpublish-course-<%= j._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-secondary mr-1">
                                                <i class="material-icons">lock</i>
                                            </button>
                                            <% } else{ %>
                                            <button type="submit" form="publish-course-<%= j._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-outline-secondary mr-1">
                                                <i class="material-icons">lock_open</i>
                                            </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<% include ../partials/scripts.ejs %>
</body>
</html>