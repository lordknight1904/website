<!doctype html>
<html class="no-js h-100" lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body class="h-100">
<div class="container-fluid">
    <div class="row">
        <% include ../partials/left-side-bar.ejs %>
        <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
            <div class="main-navbar sticky-top bg-white">
                <% include ../partials/menu.ejs %>
            </div>
            <div class="main-content-container container-fluid px-4">
                <!-- Page Header -->
                <div class="page-header row no-gutters py-4">
                    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                        <span class="text-uppercase page-subtitle">Overview</span>
                        <h3 class="page-title">Course</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card card-small mb-4">
                            <div class="card-header border-bottom">
                                <h6 class="m-0 d-inline-block">Member</h6>
                                <button type="submit" form="create-new-member"
                                        class="mb-2 btn custom-btn-sm btn-sm btn-success mr-1 edit-button float-right">
                                    <i class="material-icons">add</i>
                                </button>
                                <form method="get" action="/admin/people/form" id="create-new-member">
                                </form>
                            </div>
                            <div class="card-body p-0 pb-3 text-center">
                                <table class="table mb-0">
                                    <thead class="bg-light">
                                    <tr>
                                        <th scope="col" class="border-0">Image</th>
                                        <th scope="col" class="border-0">Name</th>
                                        <th scope="col" class="border-0">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% member.forEach((m) => { %>
                                    <tr>
                                        <td>
                                            <img src="<%= m.imagePath %>" style="height: 125px; width: 100px" />
                                        </td>
                                        <td>
                                            <a href="mailto:<%= m.email %>">
                                                <%= m.name %>
                                            </a>
                                            <% if (m.profilePage) { %>
                                            <a href="<%= m.profilePage %>" target="_blank">
                                                <%= m.name %>
                                            </a>
                                            <% } %>
                                        </td>
                                        <td>
                                            <form action="/admin/people/<%= m._id %>?_method=DELETE" method="post"
                                                  id="delete-people-<%= m._id %>"
                                                  onsubmit="return confirm('Are you sure you want to delete?');">
                                            </form>
                                            <form action="/admin/people/ungraduate/<%= m._id %>?_method=PUT" method="post"
                                                  id="ungraduate-people-<%= m._id %>"
                                                  onsubmit="return confirm('Are you sure you want to ungraduate?');">
                                            </form>
                                            <form action="/admin/people/graduate/<%= m._id %>?_method=PUT" method="post"
                                                  id="graduate-people-<%= m._id %>"
                                                  onsubmit="return confirm('Are you sure you want to graduate?');">
                                            </form>
                                            <button type="button" class="mb-2 btn custom-btn-sm btn-sm btn-warning mr-1 edit-button">
                                                <a href="/admin/people/<%= m._id %>">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </button>
                                            <button type="submit" form="delete-people-<%= m._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-danger mr-1 delete-button">
                                                <i class="material-icons">delete</i>
                                            </button>

                                            <% if(m.graduated){ %>
                                            <button type="submit" form="ungraduate-people-<%= m._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-secondary mr-1">
                                                <i class="material-icons">lock</i>
                                            </button>
                                            <% } else{ %>
                                            <button type="submit" form="graduate-people-<%= m._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-outline-secondary mr-1">
                                                <i class="material-icons">lock_open</i>
                                            </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="card card-small mb-4">
                            <div class="card-header border-bottom">
                                <h6 class="m-0 d-inline-block">Alumni</h6>
                                <button type="submit" form="create-new-member"
                                        class="mb-2 btn custom-btn-sm btn-sm btn-success mr-1 edit-button float-right">
                                    <i class="material-icons">add</i>
                                </button>
                                <form method="get" action="/admin/people/form" id="create-new-member">
                                </form>
                            </div>
                            <div class="card-body p-0 pb-3 text-center">
                                <table class="table mb-0">
                                    <thead class="bg-light">
                                    <tr>
                                        <th scope="col" class="border-0">Name</th>
                                        <th scope="col" class="border-0">Title</th>
                                        <th scope="col" class="border-0">Occupation</th>
                                        <th scope="col" class="border-0">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% alumni.forEach((a) => { %>
                                    <tr>
                                        <td>
                                            <%= a.name %>
                                        </td>
                                        <td>
                                            <%= a.title %>
                                        </td>
                                        <td>
                                            <%= a.occupation %>
                                        </td>
                                        <td>
                                            <form action="/admin/people/<%= a._id %>?_method=DELETE" method="post"
                                                  id="delete-people-<%= a._id %>"
                                                  onsubmit="return confirm('Are you sure you want to delete?');">
                                            </form>
                                            <form action="/admin/people/ungraduate/<%= a._id %>?_method=PUT" method="post"
                                                  id="ungraduate-people-<%= a._id %>"
                                                  onsubmit="return confirm('Are you sure you want to ungraduate?');">
                                            </form>
                                            <form action="/admin/people/graduate/<%= a._id %>?_method=PUT" method="post"
                                                  id="graduate-people-<%= a._id %>"
                                                  onsubmit="return confirm('Are you sure you want to graduate?');">
                                            </form>
                                            <button type="button" class="mb-2 btn custom-btn-sm btn-sm btn-warning mr-1 edit-button">
                                                <a href="/admin/people/<%= a._id %>">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </button>
                                            <button type="submit" form="delete-people-<%= a._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-danger mr-1 delete-button">
                                                <i class="material-icons">delete</i>
                                            </button>

                                            <% if(a.graduated){ %>
                                            <button type="submit" form="ungraduate-people-<%= a._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-secondary mr-1">
                                                <i class="material-icons">lock</i>
                                            </button>
                                            <% } else{ %>
                                            <button type="submit" form="graduate-people-<%= a._id %>"
                                                    class="mb-2 btn custom-btn-sm btn-sm btn-outline-secondary mr-1">
                                                <i class="material-icons">lock_open</i>
                                            </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<% include ../partials/scripts.ejs %>
</body>
</html>