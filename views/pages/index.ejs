<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/static/css/home.css">
</head>
<body>
<header class="app-bar paper4">
    <% include ../partials/header %>
</header>
<main class="margin-top">
    <div class="row">
        <div class="col-md-8 col-xs-10 col-md-offset-2 col-xs-offset-1">
            <div class="well">
                <div class="row">
                    <div class="col-md-4">
                        <img class="homeImg" src="/images/homeBshim.jpg" alt='loading' width="300" height="400"/>
                    </div>
                    <div class="col-md-8">
                        <h1><%= professor.name %></h1>
                        <h2 class="margin-bottom"><%= professor.title %></h2>
                        <h3 class="margin-bottom"><%= professor.university.department %></h3>
                        <h3>
                            <a href="<%= professor.university.URL %>" target="_blank">
                                <%= professor.university.name %>
                            </a>
                        </h3>
                        <h2 class="margin-bottom"><%= professor.lab.title %></h2>
                        <h3 class="margin-bottom"><%= professor.lab.name %></h3>
                        <h3 class="margin-bottom"><%=professor. workAddress %></h3>
                        <h3 class="margin-bottom">Tel: <%= professor.phone %></h3>
                        <h3 class="margin-bottom">Email: <%= professor.email %></h3>
                    </div>
                    <div class="col-md-12">
                        <h3>
                            <a href="<%= professor.recruit %>" target="_blank">
                                Postdoc and graduate student positions available
                            </a>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>